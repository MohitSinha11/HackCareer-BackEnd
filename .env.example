# Backend runtime configuration
PORT=8080
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/hackcareer
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=changeme!
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# CORS (comma-separated)
APP_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
APP_CORS_ALLOWED_ORIGIN_PATTERNS=https://*.vercel.app

# JWT (use a strong base64 secret in production)
APP_JWT_SECRET=replace-with-strong-base64-secret
APP_JWT_EXPIRATION_MS=86400000

# Initial admin bootstrap user
APP_BOOTSTRAP_ADMIN_EMAIL=admin@hackcareer.com
APP_BOOTSTRAP_ADMIN_PASSWORD=Admin@123
APP_BOOTSTRAP_ADMIN_NAME=HackCareer Admin
